<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e0f5f5f5"
    tools:context="bd.ac.kuet.ebb.Login">


    <ScrollView
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="5dp"
        android:scrollbars="none"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/lay_back"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="20dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo"
                android:id="@+id/imageView"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:textColor="#4d4d4d"
                android:inputType="textEmailAddress"
                android:layout_gravity="center"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:id="@+id/LEmail"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:textColor="#4d4d4d"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:background="@drawable/bg_edittext"
                android:ems="10"
                android:id="@+id/LPassword"
                android:layout_weight="1" />

            <CheckBox
                android:text="Show Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:textColor="#4d4d4d"
                android:buttonTint="#7e7e7e"
                android:id="@+id/LShowPassword"
                android:layout_weight="1" />



            <LinearLayout
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="Login"
                    android:textColor="#4e4e4e"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/buttonLogin"
                    android:layout_weight="1" />


                <Button
                    android:text="I'm Student"
                    android:textColor="#4e4e4e"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_bg"
                    android:layout_width="wrap_content"
                    android:id="@+id/imstudent"
                    android:layout_weight="1"
                    android:layout_height="30dp" />


            </LinearLayout>



        </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="#b9b9b9" />

                <TextView
                    android:text="Or"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#4d4d4d"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="#b9b9b9" />

            </LinearLayout>


            <TextView
                android:text="Contact Administrator"
                android:textColor="#4d4d4d"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/emaillogo"
                    android:id="@+id/EmailAdmin"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <TextView
                    android:text="abc@gmail.com"
                    android:textColor="#4d4d4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/phonelogo"
                    android:id="@+id/PhoneAdmin"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />

                <TextView
                    android:text="+88017xx xxx xxx"
                    android:textColor="#4d4d4d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>




    </ScrollView>

</RelativeLayout>
