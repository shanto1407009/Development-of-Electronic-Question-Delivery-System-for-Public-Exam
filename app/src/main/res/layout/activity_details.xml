<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f5f5f5"
    tools:context="bd.ac.kuet.ebb.Details">


    <ScrollView
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:scrollbars="none"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/lay_back"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="BASIC INFORMATIONS"
                    android:textColor="#4e4e4e"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_width="2dp"
                    android:id="@+id/inst_logo"
                    android:layout_marginTop="5dp"
                    app:civ_border_color="#92afafaf"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Name of the Institute"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=""
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/info_name"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#313131"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="ESTD"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_estd"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="EIIN"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_eiin"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Board"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_board"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Version"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_version"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/lay_back"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ACADEMIC INFORMATIONS"
                    android:textColor="#4e4e4e"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Head of the Institute"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text=""
                    android:paddingLeft="10dp"
                    android:id="@+id/info_head"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#313131"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Divisions Available"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=""
                    android:paddingLeft="10dp"
                    android:id="@+id/info_division"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#313131"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Class rooms"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_room"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Seats for Exam"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_seat"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Teachers"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_teacher"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/lay_back"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="CONTACTS"
                    android:textColor="#4e4e4e"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=""
                    android:paddingLeft="10dp"
                    android:id="@+id/info_address"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:background="#313131"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="GPO"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_gpo"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Phone"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_phone"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Mobile No"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_mobile"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Website"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_website"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Email"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:text=""
                            android:gravity="left"
                            android:id="@+id/info_email"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#ffffff"
                            android:background="#313131"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">


                <Button
                    android:text="Edit Informations"
                    android:textColor="#4e4e4e"
                    android:id="@+id/edit_informations"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:background="@drawable/button_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>




        </LinearLayout>




    </ScrollView>


</RelativeLayout>
