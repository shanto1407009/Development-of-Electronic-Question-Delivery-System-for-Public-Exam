<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit__informations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f5f5f5"
    tools:context="bd.ac.kuet.ebb.Edit_Informations">



    <ScrollView
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/lay_back"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="BASIC INFORMATIONS"
                    android:textColor="#4d4d4d"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/sampleicon"
                    app:civ_border_width="2dp"
                    android:id="@+id/institute_logo"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="5dp"
                    app:civ_border_color="#3abe9f"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Name of the Institute"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:id="@+id/edit_name"
                    android:background="@drawable/edit_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="ESTD"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_estd"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="EIIN"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_eiin"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Board"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_board"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Version"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_version"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/lay_back"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ACADEMIC INFORMATIONS"
                    android:textColor="#4d4d4d"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Head of the Institute"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:id="@+id/edit_head"
                    android:background="@drawable/edit_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Divisions Available"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:id="@+id/edit_division"
                    android:background="@drawable/edit_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Class rooms"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_room"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Seats for Exam"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_seat"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Total Teachers"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_teacher"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>




                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/lay_back"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="CONTACTS"
                    android:textColor="#4d4d4d"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:text="Address"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:id="@+id/edit_address"
                    android:background="@drawable/edit_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="GPO"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_gpo"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Phone"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_phone"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Mobile No"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_mobile"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Website"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_website"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Email"
                            android:textColor="#000"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="#f5f5f5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:textColor="#fff"
                            android:textSize="14dp"
                            android:id="@+id/edit_email"
                            android:background="@drawable/edit_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:text="Cancel"
                    android:textColor="#4e4e4e"
                    android:background="@drawable/button_bg"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/cancel_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="Save"
                    android:textColor="#4e4e4e"
                    android:background="@drawable/button_bg"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/save_info"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>




        </LinearLayout>




    </ScrollView>



</RelativeLayout>
